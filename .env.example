# =============================================================================
# PdM Agent - Environment Variables
# =============================================================================
# Copy this file to .env and fill in actual values.
# NEVER commit .env to version control.
# =============================================================================

# --- LLM ---
# LangChain 모델 식별자. 기본 OpenAI, 다른 provider도 가능.
# 예: gpt-4o, gpt-4o-mini, anthropic/claude-3-opus 등
LLM_MODEL=gpt-4o
EMBEDDING_MODEL=text-embedding-3-small
OPENAI_API_KEY=sk-your-openai-api-key-here

# --- Qdrant (Vector DB) ---
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_GRPC_PORT=6334

# --- PostgreSQL (Memory / LangGraph Checkpointer) ---
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=pdm_agent
POSTGRES_USER=pdm_agent
POSTGRES_PASSWORD=your-postgres-password-here

# --- Agent Configuration ---
PDM_AGENT_MAX_TOOL_CALLS=10
PDM_RAG_TOP_K=3
LOG_LEVEL=INFO
